generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  transactions Transaction[]
  categories Category[]
}

model Transaction {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Float
  type      String
  category  String
  date      DateTime
  note      String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
